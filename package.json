{
  "name": "warframe-status",
  "version": "1.1.4",
  "author": "tobitenno",
  "repository": "https://github.com/wfcd/warframe-status.git",
  "private": true,
  "dependencies": {
    "@sentry/node": "^6.17.7",
    "@sentry/tracing": "^6.17.7",
    "@wfcd/arsenal-parser": "^1.2.1",
    "apicache": "^1.6.3",
    "colors": "1.4.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "express-favicon-short-circuit": "^1.1.1",
    "flat-cache": "^3.0.4",
    "helmet": "^5.0.2",
    "json-fetch-cache": "^1.2.6",
    "node-fetch": "^2.6.7",
    "swagger-stats": "^0.99.2",
    "warframe-items": "^1.1252.83",
    "warframe-nexus-query": "^1.6.16",
    "warframe-worldstate-data": "^1.21.9",
    "warframe-worldstate-parser": "^2.23.1",
    "winston": "^3.5.1",
    "worldstate-emitter": "^1.0.8",
    "ws": "^7.5.7"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "prom-client": "^11.5.3",
    "utf-8-validate": "^5.0.9"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-private-methods": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@sentry/types": "^6.17.7",
    "@types/apicache": "^1.6.1",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/flat-cache": "^2.0.0",
    "@types/helmet": "4.0.0",
    "@types/twitter": "^1.7.1",
    "@types/ws": "^8.2.2",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.0",
    "mocha-steps": "^1.3.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon",
    "dev:pm2": "pm2 start warframe-status.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "nyc mocha",
    "update:spec": "curl --url https://docs.warframestat.us/openapi.json -G -o src/api-spec/openapi.json --silent",
    "hydrate:cache": "cross-env BUILD=build node ./src/lib/hydrate.js",
    "coverage": "npm test && nyc report --reporter=text-lcov | coveralls",
    "build": "npm run hydrate:cache"
  },
  "engines": {
    "node": ">=16.0.0 < 17",
    "npm": ">=8.0.0 < 9"
  },
  "license": "Apache-2.0",
  "nodemonConfig": {
    "ignore": [
      "src/spec/**",
      "pacakge*.json",
      "src/api-spec/**"
    ],
    "env": {
      "LOG_LEVEL": "info",
      "API_BASE_URL": "http://localhost:3001",
      "NODE_ENV": "development",
      "PORT": 3001,
      "CACHE_TIMEOUT": 30000,
      "DISABLE_PRICECHECKS": "true",
      "USER_AGENT": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/89.0.4389.114 Safari/537.36"
    }
  },
  "eslintIgnore": [
    "src/lib/generate.js"
  ],
  "eslintConfig": {
    "extends": [
      "prettier",
      "airbnb-base"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "script",
      "babelOptions": {
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-proposal-private-methods"
        ]
      }
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "no-underscore-dangle": "off",
      "strict": [
        "error",
        "safe"
      ],
      "linebreak-style": "off",
      "no-restricted-syntax": "off",
      "no-await-in-loop": "off",
      "global-require": "off",
      "no-fallthrough": "off",
      "no-param-reassign": "off",
      "no-case-declarations": "off",
      "default-case": "off"
    },
    "plugins": [
      "prettier"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-private-methods"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ],
      "@eclass/semantic-release-sentry-releases"
    ],
    "branches": "main"
  },
  "mocha": {
    "exit": true,
    "spec": "src/spec/**/*.spec.js",
    "enableSourceMaps": true,
    "enable-source-maps": true,
    "checkLeaks": true,
    "timeout": 60000,
    "normal": 500,
    "slow": 2000,
    "fullTrace": true,
    "bail": true,
    "require": [
      "mocha-steps",
      "src/spec/hooks/env.js",
      "src/spec/hooks/start.hook.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/spec/**",
      "src/controllers/index.js",
      "src/lib/*"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "source-map": true,
    "sourceMap": true,
    "produce-source-map": true,
    "skip-full": true
  }
}
