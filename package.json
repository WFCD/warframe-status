{
  "name": "warframe-status",
  "version": "1.1.0",
  "author": "tobitenno",
  "repository": "https://github.com/wfcd/warframe-status.git",
  "private": true,
  "dependencies": {
    "@sentry/node": "^6.15.0",
    "@sentry/tracing": "^6.15.0",
    "@wfcd/arsenal-parser": "^1.2.1",
    "apicache": "^1.6.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "express-favicon-short-circuit": "^1.1.1",
    "helmet": "^4.6.0",
    "json-fetch-cache": "^1.2.6",
    "nexushub-client": "^1.2.0",
    "node-fetch": "^2.6.6",
    "swagger-stats": "^0.99.2",
    "warframe-items": "^1.1252.5",
    "warframe-nexus-query": "^1.6.16",
    "warframe-worldstate-data": "^1.20.6",
    "warframe-worldstate-parser": "^2.21.1",
    "winston": "^3.3.3",
    "worldstate-emitter": "^1.0.7",
    "ws": "^7.5.6"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.5",
    "prom-client": "^11.5.3",
    "utf-8-validate": "^5.0.7"
  },
  "devDependencies": {
    "@sentry/types": "^6.15.0",
    "@types/apicache": "^1.6.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "4.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/twitter": "^1.7.1",
    "@types/ws": "^8.2.2",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "nodemon": "^2.0.15"
  },
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon",
    "dev:pm2": "pm2 start warframe-status.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "exit 0",
    "update:spec": "curl --url https://docs.warframestat.us/openapi.json -G -o src/api-spec/openapi.json --silent"
  },
  "engines": {
    "node": ">=11.15.0 < 15",
    "npm": ">=6.7.0 < 7"
  },
  "license": "Apache-2.0",
  "nodemonConfig": {
    "ignore": [
      "**/test/**.**",
      "pacakge*.json"
    ],
    "env": {
      "LOG_LEVEL": "info",
      "API_BASE_URL": "http://localhost:3001",
      "NODE_ENV": "development",
      "PORT": 3001,
      "CACHE_TIMEOUT": 30000,
      "DISABLE_PRICECHECKS": "true",
      "USER_AGENT": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/89.0.4389.114 Safari/537.36"
    }
  },
  "eslintIgnore": [
    "src/lib/generate.js"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "no-underscore-dangle": "off",
      "strict": [
        "error",
        "safe"
      ],
      "linebreak-style": "off",
      "no-restricted-syntax": "off",
      "no-await-in-loop": "off",
      "global-require": "off",
      "no-fallthrough": "off",
      "no-param-reassign": "off",
      "no-case-declarations": "off"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ],
      "@eclass/semantic-release-sentry-releases"
    ],
    "branches": "main"
  }
}
